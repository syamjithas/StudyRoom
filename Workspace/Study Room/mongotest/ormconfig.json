{
    "type": "mongodb",
    "port": 27017,
    "database": "orm_demo",
    "synchronize": true,
    "logging": false,
    "options": {
        "useNewUrlParser": true,
        "max": 20,
        "min": 10,
        "idleTimeoutMillis": 30000,
        "encrypt": false
    },
    "entities": [
        "src/entity/**/*.ts"
    ],
    "migrations": [
        "src/migration/**/*.ts"
    ],
    "subscribers": [
        "src/subscriber/**/*.ts"
    ],
    "cli": {
        "entitiesDir": "src/entity",
        "migrationsDir": "src/migration",
        "subscribersDir": "src/subscriber"
    }
}